#full programm list for fish-shell look fish file
sudo pacman -Syu

#install yay
sudo pacman -S git
cd /opt
sudo git clone https://aur.archlinux.org/yay-git.git
sudo chown -R tecmint:tecmint ./yay-git
cd yay-git
makepkg -si

#install flatpak
sudo pacman -S flatpak

#install snap
git clone https://aur.archlinux.org/snapd.git
cd snapd
makepkg -si
sudo systemctl enable --now snapd.socket
sudo ln -s /var/lib/snapd/snap /snap

#install snap-store
sudo snap install snap-store

#install pacman programms
sudo pacman -S audacity dolphin gparted kate kitty terminator thunderbird vim flameshot
sudo pacman -Ss thunderbird-i18n

#install yay programms
yay -S brave celluloid code-git dropbox github-desktop-bin github-cli pycharm-community-edition spotify timeshift htop nmon hyper

#install flatpak programms
flatpak install flathub com.discordapp.Discord de.haeckerfelix.Fragments org.onlyoffice.desktopeditors com.github.alainm23.planner 

#install snap programms
sudo snap install whatsapp-for-linux

#install virtualbox
sudo pacman -S virtualbox virtualbox-guest-iso
sudo gpasswd -a $USERS vboxusers
sudo modprobe vboxdrv
yay -Syy
yay -S virtualbox-ext-oracle
sudo systemctl enable vboxweb.service
sudo systemctl start vboxweb.service
lsmod | grep -i vbox
